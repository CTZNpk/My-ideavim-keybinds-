:set number relativenumber

let mapleader = " "

"Using j and k to escape the insert mode
inoremap jk <ESC>
inoremap kj <ESC>


"Navigate Buffers
nnoremap <S-l> :bnext<CR>
nnoremap <S-h> :bprevious<CR>

"Stay in indent mode
vnoremap < <gv
vnoremap > >gv

"Move Text up and down 
xnoremap K :move '<-2<CR>gv=gv<CR>
xnoremap J :move '>+1<CR>gv=gv<CR>
xnoremap <A-j> :move '>+1<CR>gv=gv<CR>
xnoremap <A-k> :move '<-2<CR>gv=gv<CR>


set showmode
set so=5
set incsearch
